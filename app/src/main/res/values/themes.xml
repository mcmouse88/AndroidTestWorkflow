<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.HrenApplication" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="PopupMyStyle" parent="Widget.AppCompat.Light.PopupMenu">
        <item name="android:popupBackground">@android:color/black</item>
        <item name="android:itemBackground">@android:color/black</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:divider">@drawable/popup_menu_divider</item>
        <item name="android:dividerHeight">1dp</item>
    </style>

    <style name="DividerPopup" parent="Widget.AppCompat.ListView.DropDown">
        <item name="divider">@color/white</item>
        <item name="android:divider">@color/white</item>
        <item name="android:dividerHeight">2dp</item>
        <item name="dividerHorizontal">@color/white</item>
        <item name="dividerColor">@color/white</item>
        <item name="android:listDivider">@color/white</item>
        <item name="android:horizontalDivider">@color/white</item>
        <item name="android:showDividers">middle</item>
        <item name="showDividers">middle</item>
    </style>
</resources>

